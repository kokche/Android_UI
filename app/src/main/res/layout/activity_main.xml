<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/fotocute" android:id="@+id/imageView"
            android:scaleType="centerCrop"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Sincerely yours Kokche"
            android:textSize="30dp"
            android:rotation="30"
            android:layout_marginTop="60dp"
            android:textColor="#5C1010" android:fontFamily="@font/clicker_script" android:textStyle="bold"/>
    <TextView
            android:text="I"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_marginLeft="110dp"
            android:layout_marginTop="60dp" android:textSize="36sp" android:textColor="#000000"/>
    <TextView
            android:text="My program"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_marginRight="85dp"
            android:layout_marginBottom="70dp" android:textColor="#000000" android:textSize="24sp"/>
</RelativeLayout>